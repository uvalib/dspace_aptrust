#! /bin/bash
#
# Script values -- intended to be "sourced" not run.

ERROR_STATUS=127

# Name of the generated webapp.
SERVLET='aptrust'
WAR_NAME="$SERVLET.war"

# Ensure that dspace_aptrust/bin/* dspace_util/bin/* are available.
[[ "$PROGRAM"  ]] || PROGRAM=`realpath "$0"`
[[ "$BIN_DIR"  ]] || BIN_DIR=`dirname "$PROGRAM"`
[[ "$PRJ_DIR"  ]] || PRJ_DIR=`dirname "$BIN_DIR"`
[[ "$UTIL_BIN" ]] || UTIL_BIN="$PRJ_DIR/../dspace_util/bin"

UTIL_BIN=`realpath "$UTIL_BIN"` || exit $ERROR_STATUS
[[ ":$PATH:" = *":$UTIL_BIN:"* ]] || PATH="$UTIL_BIN:$PATH"
